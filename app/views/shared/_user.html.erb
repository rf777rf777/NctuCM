<li class="user" user_id="<%= user.id %>">
	<%= link_to gravatar_for(user), user %>
	<%= link_to user.name,user %>
	<small><%= pluralize user.posts.count,"posts" %></small><br>
	<% unless current_user?(user) %>
		<% if current_user.following?(user) %>
			<%= link_to "Unfollow" , "#" , class: "btn btn-small"%>
		<% else %>
			<%= link_to "Follow" , "#" , class: "btn btn-small btn-primary" %>
		<% end %>

		<!-- Follow與Unfollow皆不指定目的地("#") 只是把它當作觸發javascript程式的事件 -->

	<% end %>
</li>