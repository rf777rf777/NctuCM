<!DOCTYPE html>
<html>
<!--h1>Posts</h1-->
<div class="row">
	<aside class="span4 pull-left">
		<section>
			<%= render "shared/form_errors", record: @post %>
			<%= link_to gravatar_for(current_user) %>
			<%= link_to current_user.name, current_user %> <br>
			<%= pluralize(current_user.posts.count,"post") %> <br>
		</section>
		<section>
			<%= form_for @post do |f| %>
				<%= f.text_area :content, placeholder: "Write a new post" %><br>
				<%= f.submit "Post", class: "btn btn-primary" %>
			<% end %>
		</section>
	</aside>
	<div class="span8 pull-left">
		<h1>Posts</h1>
		<ul class="posts">
			<%= render partial: "shared/post",collection: @posts %>
		</ul>
		<%= will_paginate @posts %>  <!--顯示分頁-->
	</div>
</div>
</html>
